#include <stdio.h>
#include <stdlib.h>

int Max_1(int matrix[4][4], int rows, int colm) {
    int maxRowIndex = -1, maxCount = 0;
    for (int i = 0; i < rows; i++) {
        int count = 0;
        for (int j = 0; j < colm; j++) {
            if (matrix[i][j] == 1) {
                count++;
            }
        }
        if (count > maxCount) {
            maxCount = count;
            maxRowIndex = i;
        }
    }
    return maxRowIndex;
}

int main() {
    int rows, colm;
    printf("Enter the number of rows and columns: ");
    scanf("%d %d", &rows, &colm);
    int matrix[rows][colm];
    printf("Enter the elements of the matrix (0s and 1s):\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < colm; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }
    int result = Max_1(matrix, rows, colm);
    if (result != -1) {
        printf("The row with the maximum number of 1s is: %d\n", result);
    } else {
        printf("No row contains 1s.\n");
    }
    return 0;
}
